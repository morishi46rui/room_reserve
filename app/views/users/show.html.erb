<div class="container">
  <h2><%= current_user.name %>のプロフィール</h2>

  <div class="d-flex">
    <div class="profile-image mb-3 w-25">
      <%= image_tag avatar_url(@user), class:"img-fluid h-100" %>
    </div>

    <div class="d-flex flex-column w-75 px-5">
      <div class="mb-3">
        <div class="media-content">
          <strong>アカウント登録日</strong>
        </div>
        <div class="media-right">
          <%= I18n.l(@user.created_at, format: :full_date) %>
        </div>
      </div>

      <div class="mb-3">
        <div class="media-content">
          <strong>自己紹介</strong>
        </div>
        <div class="media-right">
          <p><%= @user.about %></p>
        </div>
      </div>
    </div>

  </div>

</div>