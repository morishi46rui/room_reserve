<div class="container mt-3">
  <h2> ルーム登録 </h2>
  <div class="room-contents">
    <%= form_for @room do |f| %>
      <div class="update-content">
        <div class="row">
          <label class="col-md-3 required-a" for="name">ルーム名</label>
          <%= f.text_field :listing_name, placeholder: "ルーム名を入力", class: "form-control mb-4 col-md-9", required: true, id: "autoaddress" %>
        </div>
      </div>

      <div class="update-content">
        <div class="row">
          <label class="col-md-3 required-a" for="content">ルーム紹介</label>
          <%= f.text_area :summary, rows: 5, placeholder: "ルーム紹介を入力", class: "form-control mb-4 col-md-9", required: true, id: "autoaddress" %>
          </textarea>
        </div>
      </div>

      <div class="update-content">
        <div class="row">
          <label class="col-md-3 required-a" for="price">料金</label>
          <%= f.text_field :price, placeholder: "例： 5,000円",class: "form-control mb-4 col-md-9", required: true, id: "autoaddress" %>
        </div>
      </div>  

      <div class="update-content">
        <div class="row">
          <label class="col-md-3 required-a" for="address">住所</label>
          <%= f.text_field :address, placeholder: "住所を入力してください", class: "form-control mb-4 col-md-9", required: true, id: "autoaddress" %>
        </div>
      </div>
      <div class="update-content">
        <%= f.file_field :image %><br>
      </div>

        <%= f.hidden_field :active, value: true %>
        <%= f.submit "登録する", id: "publish_button", class: "btn btn-primary w-100 mt-3" %>

    <% end %>

  </div>
</div>
