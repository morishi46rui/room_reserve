<div class="container">
  
  <h2 class="mb-3">ユーザ登録情報編集</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control mb-3", placeholder: "氏名" %>
    </div>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-3", placeholder: "メールアドレス" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>現在確認を待っています: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-3", placeholder: "新しいパスワード（6文字以上）" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-3", placeholder: "パスワード（確認）" %>
    </div>

    <div class="field">
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control mb-3", placeholder: "現在のパスワード" %>
    </div>

    <div class="actions">
      <%= f.submit "変更を登録", class: "btn btn-primary w-100" %>
    </div>
  <% end %>


  <%= link_to "戻る", :back, class: "btn btn-outline-info w-100 mb-1" %>



  <h2 class="mt-5">アカウントを削除</h2>

  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger w-100" %>
</div>